<?xml version="1.0" encoding="utf-8"?>

<!-- Main layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MAP_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".view.MapActivity">

    <!-- Table layout of map will be programmatically added here -->

    <!-- Button layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <!-- Interact button -->
        <Button
            android:id="@+id/MAP_interact_button"
            android:tag="Interact"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="255dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#140FBD17"
            android:text="Interact"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            app:cornerRadius="0dp"
            app:strokeColor="#0FBD17"
            app:strokeWidth="2dp" />

        <!-- Left button -->
        <Button
            android:id="@+id/MAP_left_button"
            android:tag="Left"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#140FBD17"
            android:text="◁"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:cornerRadius="0dp"
            app:strokeColor="#0FBD17"
            app:strokeWidth="2dp" />

        <!-- Right button -->
        <Button
            android:id="@+id/MAP_right_button"
            android:tag="Right"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#140FBD17"
            android:text="▷"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:cornerRadius="0dp"
            app:strokeColor="#0FBD17"
            app:strokeWidth="2dp" />

        <!-- Up button -->
        <Button
            android:id="@+id/MAP_up_button"
            android:tag="Up"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="-30dp"
            android:backgroundTint="#140FBD17"
            android:text="△"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:cornerRadius="0dp"
            app:strokeColor="#0FBD17"
            app:strokeWidth="2dp" />

        <!-- Down button -->
        <Button
            android:id="@+id/MAP_down_button"
            android:tag="Down"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#140FBD17"
            android:text="▽"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="34sp"
            app:cornerRadius="0dp"
            app:strokeColor="#0FBD17"
            app:strokeWidth="2dp" />

    </RelativeLayout>

</LinearLayout>
